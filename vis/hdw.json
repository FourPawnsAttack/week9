{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Area chart of DHW_from_90th_HS>1 over time.",
  "width": 365,
  "height": 440,
  "title": "Degree Heating Weeks (DHW) in the Great Barrier Reef",
  "data": {
    "url": "https://gist.githubusercontent.com/FourPawnsAttack/5546d7c3db8693bd8485054cc2be5bab/raw/0afb2b85829eab2349bdfa1ee771e8b377f9149f/gistfile1.txt",
    "format": {
      "type": "csv"
    }
  },
  "params": [{
    "name": "grid",
    "select": "interval",
    "bind": "scales"
  }],
  "transform": [
    {
      "calculate": "datum['DHW_from_90th_HS>1'] > 10 ? 'red' : 'steelblue'",
      "as": "color"
    }
  ],
  "mark": {
    "type": "area",
    "opacity": 0.7
  },
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "axis": { "grid": false },
      "title": ""
    },
    "y": {
      "field": "DHW_from_90th_HS>1",
      "type": "quantitative",
      "title": "Number of DHWs"
    },
    "color": {
      "field": "color",
      "type": "nominal",
      "scale": null
    }
  }
}
